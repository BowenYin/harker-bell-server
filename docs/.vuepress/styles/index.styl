@import url("https://fonts.googleapis.com/css?family=Roboto+Mono|Roboto:400,500,700&display=block");

body {
  font-family: Roboto, -apple-system, BlinkMacSystemFont, "Segoe UI", Oxygen, Cantarell, "Fira Sans", "Droid Sans", sans-serif
}
code, kbd, .line-number {
  font-family: Menlo, "Roboto Mono", source-code-pro, Monaco, Consolas, monospace;
}
code {
  border-radius: 2px !important;
}
@media (max-width: $MQMobileNarrow) {
  div[class*="language-"] {
    border-radius: 0;
  }
}
pre, pre[class*="language-"], div[class*="language-"] {
  border-radius: 4px;
}
.custom-block.tip {
  border-color: #34A853;
}
.go-to-top, .go-to-top:hover {
  transition-duration: 150ms;
}
.go-to-top:hover {
  color: #34A853 !important;
}
h1:hover .header-anchor, h2:hover .header-anchor, h3:hover .header-anchor, h4:hover .header-anchor, h5:hover .header-anchor, h6:hover .header-anchor, .header-anchor {
  transition-duration: 100ms;
}